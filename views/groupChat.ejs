<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Group Chat</title>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body
  class="bg-gradient-to-br from-black via-purple-950 to-black text-white font-sans flex flex-col items-center p-6 min-h-screen">
  <div class="relative flex items-center py-2 px-4 mt-5 w-full max-w-2xl 
            rounded-lg text-2xl bg-gradient-to-r from-purple-600 via-pink-500 to-purple-400 
            drop-shadow-[0_0_10px_rgba(168,85,247,0.8)] mx-auto">

    <a href="/student/groupList"
      class="absolute text-lg left-5 text-white font-medium hover:text-red-500 transition duration-300">
      <span class="text-4xl leading-none">‚ùÆ</span>
    </a>

    <div class="flex items-center justify-center gap-4 w-full">
      <a href="">
        <img src="<%= groupPhoto %>" alt="Profile" class="w-10 h-10 rounded-full border-2 object-cover">
      </a>
      <h1 class="text-2xl font-bold text-white">
        <%= groupName %>
      </h1>
    </div>
  </div>


  <div id="chatBox"
    class="w-full max-w-2xl h-96 mt-2 bg-black border border-purple-700 rounded-lg p-4 mb-4 overflow-y-auto flex flex-col gap-2">
  </div>
  <div class="w-full max-w-2xl flex gap-2">
    <input type="text" id="msgInput" placeholder="Type a message..."
      class="flex-1 p-2 rounded border border-purple-600 text-black focus:outline-none focus:ring-2 focus:ring-purple-800" />
    <button onclick="sendMessage()"
      class="bg-purple-700 hover:bg-purple-600 px-4 py-2 rounded font-semibold transition duration-200 shadow-md hover:shadow-purple-600/50">
      Send
    </button>
    <button onclick="leaveRoom()"
      class="bg-gradient-to-r from-red-700 to-pink-700 hover:bg-gradient-to-r from-purple-600 via-pink-500 to-purple-400 px-4 py-2 rounded font-semibold flex items-center gap-2 transition duration-200 shadow-md hover:shadow-pink-500/50">
      Leave </button>
  </div>

  <script>
    const socket = io();
    const username = "<%= username %>"
    const room = "<%= groupName %>"
    const photo = "/photos/<%= photo %>"
    const chatBox = document.getElementById('chatBox')

    //join Room
    socket.emit('joinRoom', { room, username })

    //message in Room
    socket.on('message', (msg) => {
      const msgDiv = document.createElement('div');
      if (msg.type === 'system') {
        msgDiv.className = "text-center text-gray-400 italic text-sm";
        msgDiv.textContent = msg.text;
      } else if (msg.from === username) {
        msgDiv.className = "self-end bg-purple-700 text-white px-4 py-1 rounded-lg max-w-xs ml-auto"
        msgDiv.textContent = msg.text;
      } else {
        msgDiv.className = "self-start flex items-center gap-2 mr-auto"

        //image append
        const img = document.createElement('img')
        img.src = msg.fromPhoto;
        img.alt = 'photo';
        img.className = 'w-8 h-8 rounded-full border-2 border-white object-cover'

        //text append
        const msgText = document.createElement("div");
        msgText.className = "bg-purple-900 text-white px-4 max-w-xs py-1 rounded-lg"
        msgText.textContent = msg.text

        msgDiv.appendChild(img)
        msgDiv.appendChild(msgText)
      }

      chatBox.appendChild(msgDiv)
      chatBox.scrollTop = chatBox.scrollHeight
    });

    //Send Message button
    function sendMessage() {
      const input = document.getElementById('msgInput');
      const message = input.value.trim();
      if (message) {
        socket.emit('groupMessage', { room, from: username, fromPhoto: photo, text: message });
        input.value = '';
      }
    }

    //Leave Room
    function leaveRoom() {
      socket.disconnect()       // this will trigger server's socket.on('disconnect')
      window.location.href = "/student/groupList"
    }
  </script>
</body>
</html>