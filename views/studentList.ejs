<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body
  class="bg-gradient-to-br font-bold from-purple-900 via-black to-purple-900 min-h-screen text-white font-sans flex flex-col justify-center">

  <div class="container mx-auto px-4 py-10">
    <!-- Header -->
    <div
      class="flex justify-between items-center text-2xl p-4 bg-gradient-to-r from-purple-600 via-pink-500 to-purple-400 rounded-lg">
      <h1 class="font-bold">Start a Conversation</h1>

      <div class="flex items-center gap-4">
        <!-- Back link -->
        <a href="" class="text-sm font-medium px-3 py-1 rounded">
          Back to Profile
        </a>
        <!-- Profile icon -->
        <a href="/student/profile" class="block">
          <img src="/photos/<%= photo %>" alt="Profile" class="w-10 h-10 rounded-full border-2 object-cover">

        </a>
      </div>
    </div>

    <br><br>

    <% const otherStudents=students.filter(student=> student.id !== currentUser.id);
      %>

      <div class="flex flex-col justify-center items-center space-y-4">
        <% otherStudents.forEach(student=> { %>
          <a href="/student/chat/<%= currentUser.id %>-<%= student.id %>"
            class="flex items-center space-x-4 p-4 bg-purple-900 hover:bg-gradient-to-r from-purple-800 via-pink-700 to-purple-400 rounded-lg transition transform max-w-md w-full hover:scale-105 shadow-md">
            <img src="/photos/<%=student.photo%>" alt="profile"
              class="w-12 h-12 rounded-full border-2 border-white object-cover" />
            <span class="text-lg font-semibold bg-clip-text bg-white">
              <%= student.username %>
            </span>
          </a>
          <% }) %>
      </div>
  </div>

</body>

</html>